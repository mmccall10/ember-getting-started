<div class="jumbo">
    <div class="right tomster"></div>
    <p>
        We hope you find exactly what you're looking for in a place to stay. <br>
        Browse our listings, or use the search box above to narrow your search.
    </p>
    {{#link-to 'about' class="button"}}
        About Us
    {{/link-to}}
</div>

{{#list-filter filter=(action 'filterByCity') as |rentals|}}
    <ul class="results">
        {{#each rentals as |rental|}}
           <li>{{rental-listing rental=rental}}</li>
        {{/each}}
    </ul>
{{/list-filter}}
